<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="265dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Statistics"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonViewScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewGameScores"
                android:text="Game Score Statistics"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonViewLetterStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewLetterStatistics"
                android:text="Letter statistics"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonViewWordBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewWordBank"
                android:text="Word Bank"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>