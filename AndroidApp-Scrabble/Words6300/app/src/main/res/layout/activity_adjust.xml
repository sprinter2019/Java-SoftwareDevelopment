<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdjustActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="265dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AdjustText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adjust Game Setting"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAdjustMaxTurns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewAdjustMaxTurns"
                android:text="Adjust Max Num of Turns"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonAdjustLetterPtsAndDist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewAdjustLetterSettings"
                android:text="Adjust Letter Pts and Dist"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>